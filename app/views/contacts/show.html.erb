<% content_for(:title, "#{@contact.name} | Wikipages") %>

<h1><%= @contact.name %></h1>

<ul>
  <% @contact.phones.each do |phone| %>
  <li><a href="/phones/<%= phone.id%>/edit"><%= phone.number %></a></li>
  <% end %>
</ul>

<p>Email: <%= @contact.email %></p>

<a href="/contacts/<%= @contact.id %>/phones/new">Add phone</a>

<p><a href="/contacts">Return to contact listing</a></p>

<p><a href="/contacts/<%= @contact.id %>/edit">Edit</a></p>
<p><a href="/contacts/<%= @contact.id %>"
  data-confirm="You sure?"
  data-method="delete"
  rel="nofollow">Delete</a></p>
