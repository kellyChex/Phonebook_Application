<h1>Edit Phone Number</h1>

<%= render('layouts/errors', :object => @phone) %>

<form action="/phones/<%= @phone.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="phone_number">Phone Number</label>
  <input id="phone_number" name="number" type="text" value="<%= @phone.number %>">
  <button>Update Phone Number</button>
</form>

<p><a href="/phones/<%= @phone.id %>"
  data-confirm="You sure?"
  data-method="delete"
  rel="nofollow">Delete Phone Number</a></p>
